<?xml version="1.0" encoding="utf-8"?>
<manifest package="app.abhilasha.consumity.com.consumity"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.DesignDemo">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashViewPagerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".Login_RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".EditProfile_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
        <activity
            android:name=".Latest_Sales"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo"
            android:windowSoftInputMode="stateHidden">
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name=".ViewStoreDetails"
            android:label="@string/title_activity_view_store_details"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".ViewProductDetails"
            android:label="@string/title_activity_view_product_details"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".ProductFullDescription"
            android:label="@string/title_activity_product__full__description"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".AddPriceSale"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".ListsClickProducts"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".TermUseActivity"
            android:label="@string/title_activity_term_use"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".LeaveComment"
            android:label="@string/title_activity_leave_comment"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/Base.Theme.DesignDemo">
        </activity>

        <activity
            android:name="eu.janmuller.android.simplecropimage.CropImage"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
    </application>

</manifest>
