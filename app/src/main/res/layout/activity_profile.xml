<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id = "@+id/lay_font"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:orientation = "vertical">

        <include
            android:id = "@+id/toolbar_my"
            layout = "@layout/mytoolbar"/>

        <ScrollView
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:scrollbars = "none">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:orientation = "vertical">

                <LinearLayout
                    android:id = "@+id/nav_header_container"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "center"
                    android:gravity = "center"
                    android:orientation = "vertical">

                    <ImageView
                        android:id = "@+id/imgv_user_profile"
                        android:layout_width = "120dp"
                        android:layout_height = "120dp"
                        android:layout_gravity = "center"
                        android:layout_marginTop = "@dimen/activity_top_ten_margin"
                        android:scaleType = "fitCenter"
                        android:src = "@mipmap/ic_profile_placeholder"/>

                    <TextView
                        android:id = "@+id/txtv_profile_change_pic"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_gravity = "center"
                        android:layout_marginTop = "@dimen/activity_top_ten_margin"
                        android:gravity = "center"
                        android:text = "Change profile picture"
                        android:textColor = "@color/colorPrimary"/>

                    <TextView
                        android:id = "@+id/txtv_profile_cancel_pic"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_gravity = "center"
                        android:layout_marginTop = "@dimen/activity_top_ten_margin"
                        android:gravity = "center"
                        android:text = "Cancel"
                        android:textColor = "@color/colorPrimary"
                        android:visibility = "gone"/>

                    <android.support.v7.widget.CardView
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                        android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                        android:layout_marginTop = "@dimen/activity_top_ten_margin"
                        android:elevation = "4dp"
                        card_view:cardBackgroundColor = "@color/orange">

                        <LinearLayout
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "center_vertical"
                            android:layout_margin = "@dimen/activity_top_ten_margin"
                            android:orientation = "horizontal">

                            <ImageView
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:padding = "5dp"
                                android:src = "@mipmap/full_name_icon"/>

                            <EditText
                                android:id = "@+id/edtv_fullname"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:background = "@android:color/transparent"
                                android:hint = "Full Name"
                                android:padding = "5dp"
                                android:textColor = "@color/white"
                                android:textColorHint = "@color/white"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                        android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                        android:layout_marginTop = "@dimen/activity_top_ten_margin"
                        android:elevation = "4dp"
                        card_view:cardBackgroundColor = "@color/orange">

                        <LinearLayout
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "center_vertical"
                            android:layout_margin = "@dimen/activity_top_ten_margin"
                            android:orientation = "horizontal">

                            <ImageView
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:padding = "5dp"
                                android:src = "@mipmap/user_id_icon"/>

                            <EditText
                                android:id = "@+id/edtv_username"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:background = "@android:color/transparent"
                                android:hint = "User Name"
                                android:padding = "5dp"
                                android:textColor = "@color/white"
                                android:textColorHint = "@color/white"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                        android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                        android:layout_marginTop = "@dimen/activity_top_ten_margin"
                        android:elevation = "4dp"
                        card_view:cardBackgroundColor = "@color/orange">

                        <LinearLayout
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:layout_gravity = "center_vertical"
                            android:layout_margin = "@dimen/activity_top_ten_margin"
                            android:orientation = "horizontal">

                            <ImageView
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:padding = "5dp"
                                android:src = "@mipmap/email_icon_login"/>

                            <EditText
                                android:id = "@+id/edtv_email"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:background = "@android:color/transparent"
                                android:hint = "Email Id"
                                android:inputType = "textEmailAddress"
                                android:padding = "5dp"
                                android:textColor = "@color/white"
                                android:enabled="false"
                                android:textColorHint = "@color/white"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/lay_edit_profile"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:orientation = "vertical">

                    <LinearLayout
                        android:id = "@+id/llay_isfacebook_manuall_login"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:orientation = "vertical">

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginLeft = "20dp"

                            android:orientation = "horizontal">

                            <TextView
                                android:layout_width = "0dp"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:layout_marginLeft = "20dp"
                                android:layout_weight = "1"
                                android:text = "Change Password"
                                android:textColor = "@color/sky_blue"
                                android:textSize = "18sp"/>

                            <CheckBox
                                android:id = "@+id/chkb_change_password"
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:background = "@android:color/transparent"
                                android:button = "@drawable/checkbox_selector_profile"
                                android:checked = "false"
                                android:gravity = "center"
                                android:padding = "@dimen/activity_top_twenty_margin"/>

                            <!--android:layout_gravity="right|bottom|center"-->
                        </LinearLayout>


                        <LinearLayout
                            android:id = "@+id/llay_ischeckebox_checked"
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:orientation = "vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                            android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                            android:elevation = "4dp"
                            card_view:cardBackgroundColor = "@color/orange">

                            <LinearLayout
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center_vertical"
                                android:layout_margin = "@dimen/activity_top_ten_margin"
                                android:orientation = "horizontal">

                                <ImageView
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:padding = "5dp"
                                    android:src = "@mipmap/password_icon"/>

                                <EditText
                                    android:id = "@+id/edtv_old_password"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:background = "@android:color/transparent"
                                    android:hint = "Old Password"
                                    android:inputType = "textPassword"
                                    android:padding = "5dp"
                                    android:textColor = "@color/white"
                                    android:maxLength="15"
                                    android:textColorHint = "@color/white"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                            android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                            android:layout_marginTop = "@dimen/activity_top_ten_margin"
                            android:elevation = "4dp"
                            card_view:cardBackgroundColor = "@color/orange">

                            <LinearLayout
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center_vertical"
                                android:layout_margin = "@dimen/activity_top_ten_margin"
                                android:orientation = "horizontal">

                                <ImageView
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:padding = "5dp"
                                    android:src = "@mipmap/confirm_password_icon"/>

                                <EditText
                                    android:id = "@+id/edtv_new_password"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:background = "@android:color/transparent"
                                    android:hint = "New Password"
                                    android:inputType = "textPassword"
                                    android:padding = "5dp"
                                    android:maxLength="15"
                                    android:textColor = "@color/white"
                                    android:textColorHint = "@color/white"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                            android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                            android:layout_marginTop = "@dimen/activity_top_ten_margin"
                            android:elevation = "4dp"
                            card_view:cardBackgroundColor = "@color/orange">

                            <LinearLayout
                                android:layout_width = "wrap_content"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center_vertical"
                                android:layout_margin = "@dimen/activity_top_ten_margin"
                                android:orientation = "horizontal">

                                <ImageView
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:padding = "5dp"
                                    android:src = "@mipmap/confirm_password_icon"/>

                                <EditText
                                    android:id = "@+id/edtv_confirm_password"
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:background = "@android:color/transparent"
                                    android:hint = "Confirm Password"
                                    android:inputType = "textPassword"
                                    android:padding = "5dp"
                                    android:maxLength="15"
                                    android:textColor = "@color/white"
                                    android:textColorHint = "@color/white"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                            </LinearLayout>


                    </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_marginBottom = "@dimen/activity_top_twenty_margin"
                            android:layout_marginLeft = "@dimen/activity_top_twenty_margin"
                            android:layout_marginRight = "@dimen/activity_top_twenty_margin"
                            android:layout_marginTop = "30dp"
                            card_view:cardBackgroundColor = "@color/colorPrimary">

                            <LinearLayout
                                android:id = "@+id/llay_save_details"
                                android:layout_width = "match_parent"
                                android:layout_height = "match_parent"
                                android:layout_gravity = "center_vertical"
                                android:clickable = "true"
                                android:orientation = "horizontal"
                                android:padding = "@dimen/activity_top_ten_margin">

                              <!--  <ImageView
                                    android:layout_width = "wrap_content"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:layout_marginLeft = "@dimen/activity_top_ten_margin"
                                    android:layout_marginRight = "@dimen/activity_top_ten_margin"
                                    android:padding = "5dp"
                                    android:src = "@mipmap/confirm_password_icon"/>-->

                                <TextView
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_gravity = "center"
                                    android:layout_marginLeft = "@dimen/activity_top_ten_margin"
                                    android:padding = "5dp"
                                    android:text = "Save Details"
                                    android:gravity="center"
                                    android:textColor = "@color/white"
                                    android:textSize = "21sp"
                                    android:textStyle = "bold"/>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
