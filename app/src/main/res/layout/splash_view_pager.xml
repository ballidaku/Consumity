<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lay_font"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical">

    <!-- <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scrollbars="none">-->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_top_twenty_margin"
        android:layout_marginLeft="@dimen/activity_top_ten_margin"
        android:layout_marginRight="@dimen/activity_top_ten_margin"
        android:layout_marginTop="@dimen/activity_top_twenty_margin"
        android:layout_weight="1"
        android:src="@mipmap/logo"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_top_ten_margin"
        android:layout_marginRight="@dimen/activity_top_ten_margin"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/flip_mobile_one"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/activity_top_ten_margin"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imgv_dot_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@mipmap/full_dot_gray"/>


        <ImageView
            android:id="@+id/imgv_dot_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@mipmap/dim_dot_gray"/>


        <ImageView
            android:id="@+id/imgv_dot_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@mipmap/dim_dot_gray"/>


        <ImageView
            android:id="@+id/imgv_dot_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@mipmap/dim_dot_gray"/>


        <ImageView
            android:id="@+id/imgv_dot_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@mipmap/dim_dot_gray"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_top_ten_margin"
        android:layout_marginRight="@dimen/activity_top_ten_margin"
        android:layout_marginTop="@dimen/activity_top_ten_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnrv_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_top_ten_margin"
            android:layout_weight="1"
            android:background="@drawable/login_btn_orng_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/login_icon_man"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="25dp"
                android:text="@string/txt_login"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_eightn"
                android:textStyle="bold"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrv_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_top_ten_margin"
            android:layout_weight="1"
            android:background="@drawable/login_btn_orng_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/register_icon_man"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="20dp"
                android:text="@string/txt_register"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_eightn"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="@dimen/text_size_five"
        android:text="Or"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_eightn"
        android:textStyle="bold"/>


    <!--<LinearLayout
        android:id="@+id/lnr_vw_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_top_twenty_margin"
        android:background="@mipmap/fb_btn"
       >

        <com.facebook.login.widget.LoginButton
            android:id="@+id/btnvw_faceboob_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
-->
    <LinearLayout
        android:id="@+id/lin_lay_direct_enter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_top_ten_margin"
        android:layout_marginLeft="@dimen/activity_top_ten_margin"
        android:layout_marginRight="@dimen/activity_top_ten_margin"
        android:layout_marginTop="@dimen/activity_top_ten_margin"
        android:layout_weight="0.6"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/btn_direct_enter_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_direct_enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_top_ten_margin"
                android:text="Direct Enter"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_eightn"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/activity_top_ten_margin"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/lay_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/about_icon"
                android:text="About"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/privacy_icon"
                android:text="Privacy Policy"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_terms_use"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/terms_icon"
                android:text="Terms of use"
                android:textColor="@color/white"/>

        </LinearLayout>

    </LinearLayout>
    <!--  </LinearLayout>-->
    <!--</ScrollView>-->

</LinearLayout>
