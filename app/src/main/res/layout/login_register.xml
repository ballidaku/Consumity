<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lay_font"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/splash_bg"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_top_ten_margin"
                android:layout_marginRight="@dimen/activity_top_ten_margin"
                android:layout_marginTop="@dimen/activity_top_twenty_margin"
                android:background="@mipmap/logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_top_twenty_margin"
                android:gravity="center"
                android:orientation="horizontal">
                <!--Relative Login -->
                <RelativeLayout
                    android:id="@+id/relvw_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtv_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/activity_top_twenty_margin"
                        android:text="@string/txt_login"
                        android:textColor="@color/white"
                        android:textSize="@dimen/activity_top_twenty_margin"
                        />

                    <View
                        android:id="@+id/view_login_line"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignEnd="@+id/txtv_login"
                        android:layout_alignRight="@+id/txtv_login"
                        android:layout_below="@+id/txtv_login"
                        android:background="@color/orange"/>

                </RelativeLayout>

                <View
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="@dimen/activity_top_ten_margin"
                    android:layout_marginRight="@dimen/activity_top_ten_margin"
                    android:background="@color/white"/>

                <!--Relative Register-->
                <RelativeLayout
                    android:id="@+id/rel_vw_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtv_register"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/activity_top_twenty_margin"
                        android:text="@string/txt_register"
                        android:textColor="@color/white"
                        android:textSize="@dimen/activity_top_twenty_margin"
                        />

                    <View
                        android:id="@+id/view_register_line"
                        android:layout_width="wrap_content"
                        android:layout_height="2dp"
                        android:layout_alignEnd="@+id/txtv_register"
                        android:layout_alignRight="@+id/txtv_register"
                        android:layout_below="@+id/txtv_register"
                        android:background="@color/orange"/>

                </RelativeLayout>
            </LinearLayout>
            <!--Full name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_top_twenty_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lnrvw_register_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_btn_orng_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@mipmap/full_name_icon"/>

                    <EditText
                        android:id="@+id/edtv_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@android:color/transparent"
                        android:hint="Full Name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>

                </LinearLayout>

                <!--User Id-->
                <LinearLayout
                    android:id="@+id/llay_user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_btn_orng_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@mipmap/user_id_icon"/>


                    <EditText
                        android:id="@+id/edtv_user_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@android:color/transparent"
                        android:hint="User Name"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!--Email Id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_btn_orng_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@mipmap/email_icon_login"/>


                    <EditText
                        android:id="@+id/edtv_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@android:color/transparent"
                        android:hint="Email Id"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!--Password-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_btn_orng_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@mipmap/password_icon"/>


                    <EditText
                        android:id="@+id/edtv_paswrd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@android:color/transparent"
                        android:hint="Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>
                </LinearLayout>

                <!--Confirm password-->
                <LinearLayout
                    android:id="@+id/llay_cnfrm_pas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_btn_orng_bg"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@mipmap/confirm_password_icon"/>

                    <EditText
                        android:id="@+id/edtv_cnfrm_pas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                        android:background="@android:color/transparent"
                        android:hint="Confirm Password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"/>

                </LinearLayout>



                <TextView
                    android:id = "@+id/txtv_forgot_password"
                    android:layout_width = "wrap_content"
                    android:layout_height = "40dp"
                    android:layout_gravity = "right"
                    android:gravity = "right|center_vertical"
                    android:text = "Forgot your password?"
                    android:textColor = "@color/White"
                    android:textStyle = "bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llay_btn_login_registr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/activity_top_twenty_margin"
                android:layout_marginRight="@dimen/activity_top_twenty_margin"
                android:layout_marginBottom="@dimen/activity_top_twenty_margin"
                android:background="@mipmap/btn_direct_enter_bg"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgv_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_top_ten_margin"
                    android:background="@mipmap/register_icon_man"/>

                <TextView
                    android:id="@+id/txtv_login_registr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_eightn"
                    android:layout_marginRight="8dp"
                    android:textStyle="bold"/>



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Or"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_eightn"
                android:textStyle="bold"/>

            <!--<LinearLayout
                android:id="@+id/llay_fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_top_twenty_margin"
                android:background="@mipmap/fb_btn">

                <com.facebook.login.widget.LoginButton
                    android:id="@+id/btn_faceboob_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>-->

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3E5894"
                android:orientation="vertical"
                android:layout_margin="@dimen/activity_top_twenty_margin">

              <!--  <ImageView
                    android:id="@+id/img_vw_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/fb_btn"
                    android:visibility="gone"/>
-->
                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtv_fb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/fb_icon"
                    android:text="Register With Facebook"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="@dimen/activity_top_ten_margin"
                    android:textSize="@dimen/text_size_eightn"
                    android:padding="7dp"
                    android:gravity="center"
                    android:visibility="visible"/>

            </LinearLayout>


            <TextView
                android:id="@+id/txtv_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/back_underline"
                android:paddingBottom="20dp"
                android:textColor="@color/orange"
                />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
